pre-start script
  mkdir -p /var/log/photo-service
end script

start on (local-filesystems and net-device-up IFACE=eth0)
stop on runlevel [016]

respawn

chdir /opt/services/photo-service

limit nofile 65536 65536

script
  exec bin/server -c config/{{ config_file }} >> /var/log/photo-service/service.log 2>&1
end script
